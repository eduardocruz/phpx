{
    "name": "phpx/phpx",
    "description": "NPX-like package execution tool for PHP",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Eduardo Cruz",
            "email": "eduardo@phpx.dev"
        }
    ],
    "require": {
        "php": ">=8.1",
        "symfony/console": "^6.0",
        "symfony/process": "^6.0",
        "symfony/filesystem": "^6.0",
        "composer/composer": "^2.0",
        "laravel/prompts": "^0.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",

        "friendsofphp/php-cs-fixer": "^3.26",
        "phpmd/phpmd": "^2.13",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "PHPX\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPX\\Tests\\": "tests/"
        }
    },
    "bin": ["bin/phpx"],
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",

        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "phpmd": "phpmd src text phpmd.xml",
        "phpcs": "phpcs --standard=PSR12 src tests",
        "ci": [
            "@cs-check",
            "@phpmd",
            "@test"
        ],
        "fix": [
            "@cs-fix"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}